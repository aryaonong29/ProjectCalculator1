<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv"
        android:src="@drawable/iv_1"
        style="@style/ImageView"/>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/ll_a"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="vertical">

            <EditText
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/etNum1"
                android:layout_width="match_parent"
                android:hint="@string/income">
            </EditText>

            <EditText
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/etNum2"
                android:layout_width="match_parent"
                android:hint="@string/outcome">
            </EditText>

            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/etNum3"
                android:layout_width="match_parent"
                android:hint="@string/balance">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_b"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:layout_gravity="center">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:id="@+id/gridLayout">

                <Button
                    android:id="@+id/btn_1"
                    style="@style/Button1" />

                <Button
                    android:id="@+id/btn_2"
                    style="@style/Button2"/>

                <Button
                    android:id="@+id/btn_3"
                    style="@style/Button3"/>

                <Button
                    android:id="@+id/btn_4"
                    style="@style/ButtonLand4"/>

                <Button
                    android:id="@+id/btn_5"
                    style="@style/ButtonLand5"/>

                <Button
                    android:id="@+id/btn_6"
                    style="@style/ButtonLand6"/>

                <Button
                    android:id="@+id/btn_7"
                    style="@style/ButtonLand7"/>

                <Button
                    android:id="@+id/btn_8"
                    style="@style/ButtonLand8"/>

                <Button
                    android:id="@+id/btn_9"
                    style="@style/ButtonLand9"/>

                <Button
                    android:id="@+id/btn_clear"
                    style="@style/ButtonLandclear"/>

                <Button
                    android:id="@+id/btn_0"
                    style="@style/ButtonLand0"/>

                <Button
                    android:id="@+id/btn_back"
                    style="@style/ButtonLandback"/>

            </GridLayout>

        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        app:layout_anchor="@id/ll_a"
        app:layout_anchorGravity="bottom|right|end"/>

</android.support.design.widget.CoordinatorLayout>
